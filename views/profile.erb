<style>
  body{
       background-image: url("/bk_pic5.png");
       color:white;
  }
</style>

<div class="layout_content">
        <% if session[:user_id] %>
              <ul id="nav">
                <li class="list">
                  <a href="/">
                    Logout
                  </a>
                </li>
                <li class="list">
                  <a href="/home">
                    Tweets
                  </a>
                </li>
                <li class="list">
                  <a href="/profile">
                    Profile
                  </a>  
                </li>
                <li class="list">
                  <a href="/home">
                    Home
                  </a>
                </li>
              </ul>
        <% end %>
</div>

<div class="homepage_header">
  Welcome,
  <%=@user.fname if @user %>
</div>

<div class="profile">
    <span class="profile_pic"><img src="/profile_pic.png" width="150px" height="100px"></span>
    <span class="profile_full_name"><%=current_user.fname.capitalize + " " + current_user.lname%></span>
</div>


<div id="homepage_content">
  <div id="homepage_login">
    <form action="/posts/new" method="POST">
      <label for="title" class="formlabel"> Title </label>
      <input type="text" name="title" class="field">
      <label for="content" class="formlabel">Content</label>
      <textarea rows="4" cols="50" name="content"  class="field">Enter text here</textarea> 
      <div class="submit">
          <input type="submit" value="Compose a new tweet" id="signin_submit"/>
      </div>
    </form>
  </div>
</div>

<div id="profile_posts">
    <h1 class="tweets">
       My tweets 
    </h1>

    <% @user.posts.all.each do |post|%>
      <hr color="grey">
      <div class="post_fname">
         @<%=post.user.fname + post.user.lname %>
      </div>
      <div class="post_title">   
         <%= post.title %>
      </div>  
      <div class="post_content"> 
         <%= post.content %>
      </div>
      <br>
    <% end %> 
<div>


